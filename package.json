{
  "name": "cumulus-api",
  "version": "0.1.0",
  "description": "Cumulus API",
  "main": "handler.js",
  "scripts": {
    "test": "ava lib/tests/*.js",
    "lint": "./node_modules/.bin/eslint .",
    "start": "bin/parallel 'webpack -w --colors' 'sulu serve'",
    "serve": "bin/parallel 'webpack -w --colors' 'sulu serve'",
    "prepublish": "cd lib && npm link && cd .. && npm link cumulus-common && cd sulu && npm link && cd .. && npm link sulu",
    "build": "webpack --progress"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-polyfill",
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "@ava/stage-4",
      "@ava/transform-test-files"
    ],
    "plugins": ["transform-async-to-generator"]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "generator-star-spacing": "off",
      "radix": "off",
      "strict": "off",
      "import/no-extraneous-dependencies": "off",
      "import/newline-after-import": "off",
      "import/prefer-default-export": "off",
      "no-console": "off",
      "no-continue": "off",
      "spaced-comment": "off",
      "prefer-template": "warn",
      "no-underscore-dangle": "off",
      "comma-dangle": ["warn", "never"],
      "object-shorthand": "off",
      "space-before-function-paren": ["error", "never"],
      "brace-style": [2, "stroustrup"],
      "no-useless-escape": "off",
      "no-param-reassign": "off",
      "no-prototype-builtins": "off",
      "consistent-return": "off",
      "no-await-in-loop": "off",
      "max-len": [2, {
        "code": 100,
        "ignorePattern": "(https?:|JSON\\.parse|[Uu]rl =)"
      }],
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "class-methods-use-this": "off"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cumulus-nasa/cumulus-api.git"
  },
  "author": "Development Seed",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/cumulus-nasa/cumulus-api/issues"
  },
  "homepage": "https://github.com/cumulus-nasa/cumulus-api#readme",
  "dependencies": {
    "aws-sdk": "^2.14.0",
    "ingest-common": "^0.1.0",
    "dynamodb-data-types": "^3.0.0",
    "elasticsearch": "^12.1.3",
    "form-data": "^2.1.2",
    "got": "^6.7.1",
    "jsonschema": "^1.1.1",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "pvl": "https://github.com/cumulus-nasa/pvl.git",
    "querystring": "^0.2.0",
    "queue-async": "^1.2.1",
    "simplecrawler": "^1.0.3"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "commander": "^2.9.0",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "glob": "^7.1.1",
    "good": "^7.1.0",
    "good-console": "^6.3.1",
    "good-squeeze": "^5.0.1",
    "json-loader": "^0.5.4",
    "mocha": "^3.0.2",
    "mocha-webpack": "^1.0.0-beta.1",
    "nyc": "^10.2.0",
    "prepend-loader": "0.0.2",
    "sinon": "^2.0.0-pre.5",
    "webpack": "^2.2.1",
    "webpack-node-externals": "^1.5.4"
  }
}
